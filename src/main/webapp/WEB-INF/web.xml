<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         metadata-complete="true">

	<display-name>Hurricane</display-name>
	
	<listener>
		<listener-class>ca.datamagic.hurricane.servlet.HurricaneContextListener</listener-class>
	</listener>

	<servlet>
        <servlet-name>Cache</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.CacheServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListBasins</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.ListBasinsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListYears</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.ListYearsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Storm</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.StormServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StormTrack</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.StormTrackServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerUI</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.SwaggerUIServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerResources</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.SwaggerResourcesServlet</servlet-class>
    </servlet>
	<servlet>
        <servlet-name>SwaggerAPI</servlet-name>
        <servlet-class>ca.datamagic.hurricane.servlet.SwaggerAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Cache</servlet-name>
        <url-pattern>/api/cache</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListBasins</servlet-name>
        <url-pattern>/api/basins</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListYears</servlet-name>
        <url-pattern>/api/basin/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/api/search/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Storm</servlet-name>
        <url-pattern>/api/storm/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StormTrack</servlet-name>
        <url-pattern>/api/stormTrack/*</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerUI</servlet-name>
        <url-pattern>/swagger-resources/configuration/ui</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerResources</servlet-name>
        <url-pattern>/swagger-resources</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>SwaggerAPI</servlet-name>
        <url-pattern>/v2/api-docs</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>swagger-ui.html</welcome-file>
    </welcome-file-list>
</web-app>

